// manifest.json

// most basic manifest.json possible, with only required fields filled in
{
  "manifest_version": 2,
  "name": "link-IT!",
  "version": "0.0.2",
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["bower_components/jquery/jquery.min.js", "main_module/content.js"]
  }],
  "browser_action": {
    "default_title": "link-IT!",
    "default_icon": "assets/icon.png",
    "default_popup": "popup_module/popup.html"
  }
}
